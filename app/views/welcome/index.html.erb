<script>

  var height=0;
  var next_page=2;
  var loading=false;
  $(document).ready(function() {
  $(window).scroll(function () { 
  height = $('#buzz_cards').height();
  var scrollTop = $(window).scrollTop();
  var scrollpart=(100*scrollTop)/height;
  // console.log(scrollpart);
  if ((!loading) & (scrollpart>40)) {
    loading=true;
    $.get("/welcome.js?page="+next_page,function(dat) { 
     next_page += 1;
     loading=false;
    });
  };
  });
  })

</script>

